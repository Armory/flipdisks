#!/bin/bash -xe
### BEGIN INIT INFO
# Provides:          flipdisk-controller
# Required-Start:    $local_fs $network $named $time $syslog
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Description:       Flipdisk Controller
### END INIT INFO

cd /home/pi/Desktop
SCRIPT="/home/pi/Desktop/main -p /dev/ttyUSB0 -slack-token $(cat slack-token.txt) -github-token $(cat github-token.txt)"
RUNAS=root
NAME=flipdisk-controller

PIDFILE="/var/run/${NAME}.pid"
LOGFILE="/tmp/${NAME}.log"

start() {
  if [ -f ${PIDFILE} ] && kill -0 $(cat ${PIDFILE}); then
    echo 'Service already running' >&2
    return 1
  fi
  echo 'Starting serviceâ€¦' >&2
  local CMD="${SCRIPT} &>> \"${LOGFILE}\" & echo \$!"
  su -c "$CMD" $RUNAS > "$PIDFILE"
  echo 'Service started' >&2
}

stop() {
  if [ ! -f "$PIDFILE" ] || ! kill -0 $(cat "$PIDFILE"); then
    echo 'Service not running' >&2
    return 1
  fi
  echo 'Stopping serviceâ€¦' >&2
  kill -15 $(cat "$PIDFILE") && rm -f "$PIDFILE"
  echo 'Service stopped' >&2
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  retart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
esac
